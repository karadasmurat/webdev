<!DOCTYPE html>
<html lang="en">

<head>
    <!-- To reduce duplication, we will leverage EJS partials. -->
    <%- include('../partials/head.ejs') %>
    <title>Campgrounds</title>
</head>

<body>
    <!-- The <header> HTML element represents introductory content, typically a group of introductory or navigational aids. -->
    <header>
        <%- include('../partials/navbar.ejs') %>
    </header>
    <div class="container">

        <!-- flash messages -->
        <%- include('../partials/flash-messages.ejs') %>

        <h1>Campgrounds</h1>
        <a href="/campgrounds/create" class="btn btn-outline-primary"> <i class="bi bi-plus-square"></i> Add New</a>
        <hr>

        <!-- display a list of items - each as a card
            note that there is a single row, which is a wrapper for all items. 
            Each card, containing an item, will be in a ".col" under a single ".row" -->
        <div class="row justify-content-center">

            <% for(let campground of campgrounds){ %>
            <div class="col-md-6 col-xl-4 mx-auto">

                <!-- <div class="card text-end mb-3" style="max-width: 440px;"> -->
                <div class="card text-end mb-3">
                    <div class="row g-0">
                        <div class="col-4 bg-light">
                            <img src="<%= campground.image %>" class="rounded-start object-fit-cover"
                                style="width: 100%; height: 100%;">
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= campground.title %></h5>
                                <!-- 
                                    text-truncate class in Bootstrap 5 to truncate long text and add an
                                ellipsis to indicate that there is more content available.  
                                 -->
                                <p class="card-text text-truncate">
                                    <%= campground.description %></p>
                                <p class="card-text ><small class=" text-muted"><%= campground.location %></small></p>
                                <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-primary">
                                    Details <i class="bi bi-caret-right-fill"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 
                <div class="card" style="width: 18rem;">
                    <img src="<%= campground.image %>" class="card-img-top object-fit-cover"
                        style="width: 100%; height: 15vw;">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text"><small class="text-muted"><%= campground.location %></small></p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div> -->

            </div>
            <% } %>

        </div>
        <%- include('../partials/footer.ejs') %>
    </div>

</body>

</html>